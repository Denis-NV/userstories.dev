{
  "author": "Denis Nemytov",
  "license": "MIT",
  "name": "@ustrs/shadcn-ui",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "rm -rf ./dist && pnpm run '/^watch:.*/'",
    "build": "tsc && vite build && pnpm build:tailwind",
    "build:tailwind": "tailwindcss -i ./src/styles.css -o dist/index.css",
    "watch:tailwind": "pnpm build:tailwind --watch",
    "watch:build": "vite build --emptyOutDir=false --watch",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./dist/lib.es.cjs",
        "types": "./dist/index.d.ts"
      },
      "require": "./dist/lib.umd.cjs"
    },
    "./styles": "./dist/index.css",
    "./tailwind.preset": "./tailwind.preset.ts"
  },
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.es.cjs",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.5",
    "@storybook/addon-interactions": "^7.6.5",
    "@storybook/addon-links": "^7.6.5",
    "@storybook/builder-vite": "^7.6.5",
    "@storybook/react": "^7.6.5",
    "@storybook/react-vite": "^7.6.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint-plugin-storybook": "^0.6.15",
    "postcss": "^8.4.32",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^7.6.5",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.6",
    "vite-plugin-dts": "^3.6.4",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}