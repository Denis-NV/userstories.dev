{
  "author": "Denis Nemytov",
  "license": "MIT",
  "name": "@ustrs/shadcn-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm run '/^watch:.*/'",
    "build": "tsc && vite build && pnpm build:tailwind",
    "build:tailwind": "tailwindcss -i ./src/styles.css -o dist-css/index.css",
    "watch:tailwind": "pnpm build:tailwind --watch",
    "watch:build": "vite build --emptyOutDir=false --watch",
    "preview": "vite preview",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./dist/lib.es.cjs",
        "types": "./dist/index.d.ts"
      },
      "require": "./dist/lib.umd.cjs"
    },
    "./styles": "./dist-css/index.css",
    "./tailwind.preset": "./tailwind.preset.ts"
  },
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.es.cjs",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.8",
    "@storybook/addon-interactions": "^7.6.8",
    "@storybook/addon-links": "^7.6.8",
    "@storybook/builder-vite": "^7.6.8",
    "@storybook/react": "^7.6.8",
    "@storybook/react-vite": "^7.6.8",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@ustrs/typescript-config": "workspace:*",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.309.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.8",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2"
  }
}
