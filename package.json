{
  "name": "userstories.dev",
  "private": true,
  "version": "0.0.0",
  "description": "A pnpm monorepo with some nx scripts for build acceleration",
  "scripts": {
    "build:all": "nx run-many --target=build --all --verbose",
    "build:affected": "nx affected:build --verbose",
    "build:bbn": "nx build bbn --verbose",
    "dev:bbn": "nx dev bbn",
    "lint": "eslint '{apps,libs}/*/src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix '{apps,libs}/*/src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write '{apps,libs}/*/src/**/*.{ts,tsx,css}' --config ./.prettierrc",
    "prepare": "husky install",
    "pub:npm": "pnpm changeset version && pnpm install && pnpm publish -r --no-git-checks --access public"
  },
  "keywords": [],
  "author": "Denis Nemytov",
  "license": "ISC",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "libs/*/src/**/*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm format",
      "pnpm syncpack lint"
    ],
    "apps/*/src/**/*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm format",
      "pnpm syncpack lint"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "fast-check": "^3.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nx": "^17.1.3",
    "prettier": "^3.1.0",
    "syncpack": "12.0.0-alpha.0",
    "typescript": "^5.3.2"
  },
  "volta": {
    "node": "20.9.0"
  }
}