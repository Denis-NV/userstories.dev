{
  "name": "userstories.dev",
  "private": true,
  "description": "",
  "scripts": {
    "build:all": "nx run-many --target=build --all",
    "build:affected": "nx affected:build",
    "build:bbn": "nx build bbn",
    "dev:bbn": "nx dev bbn",
    "lint": "eslint '{apps,libs}/*/src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix '{apps,libs}/*/src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write '{apps,libs}/*/src/**/*.{ts,tsx,css}' --config ./.prettierrc",
    "prepare": "husky install",
    "pub:npm": "pnpm changeset version && pnpm install && pnpm publish -r --no-git-checks --access public",
    "create:app": "nx g @nx/react:app libs/${NAME=new-app} --bundler=vite",
    "create:lib": "nx g @nx/react:lib libs/${NAME=new-lib} --bundler=vite"
  },
  "keywords": [],
  "author": "Denis Nemytov",
  "license": "ISC",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "libs/*/src/**/*.{js,jsx,ts,tsx}": [
      "pnpm run lint",
      "pnpm run format"
    ],
    "apps/*/src/**/*.{js,jsx,ts,tsx}": [
      "pnpm run lint",
      "pnpm run format"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@changesets/cli": "^2.26.2",
    "@nx/js": "17.1.3",
    "@nx/react": "^17.1.3",
    "@nx/vite": "^17.1.3",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@testing-library/react": "14.0.0",
    "@types/node": "18.14.2",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "~4.0.0",
    "@vitest/ui": "~0.34.6",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jsdom": "~22.1.0",
    "lint-staged": "^15.1.0",
    "nx": "^17.1.3",
    "prettier": "^3.1.0",
    "react-hooks": "^1.0.1",
    "typescript": "^5.3.2",
    "vite": "~4.3.9",
    "vite-plugin-dts": "~2.3.0",
    "vitest": "~0.34.6"
  },
  "volta": {
    "node": "20.9.0"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}