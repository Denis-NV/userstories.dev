{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "allowJs": false,
    "typeRoots": ["node_modules/@types", "src/index.d.ts"],
    "moduleResolution": "bundler",
    "paths": {
      "@const/*": ["./src/const/*"],
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
