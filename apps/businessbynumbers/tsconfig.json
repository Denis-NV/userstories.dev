{
  "extends": "@ustrs/typescript-config/react-vite.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "bundler",
    "paths": {
      "@const/*": ["./src/const/*"],
      "@config/*": ["./src/config/*"],
      "@test/*": ["./src/test/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
